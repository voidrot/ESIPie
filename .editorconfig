# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,css,js,json,sh,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[LICENSE]
insert_final_newline = false
